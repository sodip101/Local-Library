extends layout

block content

  h1 Author: #{author.name}
  p #{author.lifespan}
  
  div(style='margin-left:20px;margin-top:20px')

    h4 Books
    dl
      each book in author_books
        dt 
          a(href='/catalog/'+book.url) #{book.title}
        dd #{book.summary}

      else
        p This author has no books.
    hr
    p
      a(href='/catalog/'+author.url+'/delete') Delete author
    p
      a(href='/catalog/'+author.url+'/update') Update author